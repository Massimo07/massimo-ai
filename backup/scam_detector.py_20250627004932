from utils import get_user

from telegram import InlineKeyboardButton, InlineKeyboardMarkup

async async def scam_detector_handler(update, context):

    user = update.effective_user

    text = (

        "üõ°Ô∏è *Scam Detector*\n\n"

        "Tutti i contatti e transazioni vengono verificati automaticamente dall‚ÄôAI per prevenire truffe e attivit√† sospette.\n"

        "Se noti qualcosa di strano, segnalalo qui!"

    )

    buttons = [

        [InlineKeyboardButton("Segnala sospetto", callback_data="report_scam")],

        [InlineKeyboardButton("üè† Torna Home", callback_data="home")]

    ]

    await context.bot.send_message(

        chat_id=user.id,

        text=text,

        parse_mode="Markdown",

        reply_markup=InlineKeyboardMarkup(buttons)

    )
